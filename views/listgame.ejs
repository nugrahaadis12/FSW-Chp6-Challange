<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>Document</title>
</head>

<body>
    <h1 class="text-center">List Game</h1>
    <div class="input-form text-center">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Input Name Game" id="listgame-input">
        </div>
        <button type="submit" class="btn btn-primary" id="btnInsert" onclick=handleInputNameGame()>Input</button>
        <button type="submit" class="btn btn-warning" id="btnEdit" disabled>Submit Edit</button>
    </div>

    <div class="table-data">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name Game</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for( let index=0; index < listGames.length; index++ ) { %>
                    <tr id="<%= listGames[index].id %>">
                        <th scope="row">
                            <%= index + 1%>
                        </th>
                        <td>
                            <%= listGames[index].nameGame%>
                        </td>
                        <td>
                            <a href=<%=`/dashboard_game_biodata/${listGames[index].id}` %> > Biodata Game</a>
                            <a>|</a>
                            <a href=<%=`/dashboard_game_history/${listGames[index].id}` %> > History Game</a>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-primary"
                                onclick=prepareEditListGame(<%=listGames[index].id%>)>Edit</button>
                            <button type="submit" class="btn btn-danger"
                                onclick=handleDeleteListGame(<%=listGames[index].id%>)>Delete</button>
                        </td>
                    </tr>
                    <% } %>

            </tbody>
        </table>
    </div>
    <script src="../js/script.js"></script>
</body>

</html>